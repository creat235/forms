<body>

  <!-- Login Section -->
  <div class="container" id="login-section">
    <div class="login-box">
      <h2>Login</h2>
      <div class="input-box">
        <input type="text" id="username" placeholder="Username" required>
      </div>
      <div class="input-box">
        <input type="password" id="password" placeholder="Password (242002 - 242040)" required>
      </div>
      <button class="btn" onclick="login()">Login</button>
      <p id="error" style="color:red; margin-top:10px;"></p>
    </div>
  </div>

  <!-- Welcome Section -->
  <div class="container hidden" id="welcome-section">
    <div class="welcome-box">
      <h1>Khulna University</h1>
      <h2>Statistics Routine Form</h2>
      <button class="btn" onclick="showRoutine()">See Routine</button>

      <div id="routine" class="routine-box hidden">
        <h3>📅 Routine</h3>
        <p><b>Sunday:</b> Probability Theory - 10:00 AM</p>
        <p><b>Tuesday:</b> Statistics Lab - 2:00 PM</p>
        <p><b>Thursday:</b> Discrete Math - 11:30 AM</p>
        <button class="btn back-btn" onclick="logout()">🔙 Back to Login</button>
      </div>
    </div>
  </div>

  <script>
    function login() {
      let username = document.getElementById("username").value;
      let password = parseInt(document.getElementById("password").value);
      let errorMsg = document.getElementById("error");

      if (password >= 242002 && password <= 242040) {
        // Save login info in localStorage
        localStorage.setItem("loggedIn", "true");
        localStorage.setItem("username", username);
        localStorage.setItem("password", password);

        document.getElementById("login-section").classList.add("hidden");
        document.getElementById("welcome-section").classList.remove("hidden");
      } else {
        errorMsg.textContent = "❌ Invalid Password! Only 242002 - 242040 allowed.";
      }
    }

    function showRoutine() {
      document.getElementById("routine").classList.remove("hidden");
    }

    function logout() {
      localStorage.removeItem("loggedIn");
      document.getElementById("routine").classList.add("hidden");
      document.getElementById("welcome-section").classList.add("hidden");
      document.getElementById("login-section").classList.remove("hidden");
    }

    // Auto login if already saved
    window.onload = function() {
      if (localStorage.getItem("loggedIn") === "true") {
        document.getElementById("login-section").classList.add("hidden");
        document.getElementById("welcome-section").classList.remove("hidden");
      }
    }
  </script>

</body>
